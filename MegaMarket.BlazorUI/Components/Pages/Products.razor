@page "/products"
@inject MegaMarket.BlazorUI.Services.ProductApiClient ProductApiClient

<PageTitle>Products</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="mb-1">Products</h1>
        <p class="text-muted mb-0">Manage inventory items and see what is currently available.</p>
    </div>
    <button class="btn btn-outline-secondary" @onclick="ResetForm" disabled="@isSaving">
        @if (isEditing)
        {
            <span>Cancel edit</span>
        }
        else
        {
            <span>Clear form</span>
        }
    </button>
</div>

@if (!string.IsNullOrWhiteSpace(errorMessage))
{
    <div class="alert alert-danger" role="alert">@errorMessage</div>
}
@if (!string.IsNullOrWhiteSpace(successMessage))
{
    <div class="alert alert-success" role="alert">@successMessage</div>
}

<div class="row gy-4">
    <div class="col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">@((isEditing ? "Edit product" : "Add new product"))</h5>
                <EditForm Model="formModel" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Barcode</label>
                            <InputText class="form-control" @bind-Value="formModel.Barcode" />
                            <ValidationMessage For="@(() => formModel.Barcode)" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Category</label>
                            <InputText class="form-control" @bind-Value="formModel.Category" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Name</label>
                            <InputText class="form-control" @bind-Value="formModel.Name" />
                            <ValidationMessage For="@(() => formModel.Name)" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Unit price</label>
                            <InputNumber class="form-control" @bind-Value="formModel.UnitPrice" />
                            <ValidationMessage For="@(() => formModel.UnitPrice)" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Quantity in stock</label>
                            <InputNumber class="form-control" @bind-Value="formModel.QuantityInStock" />
                            <ValidationMessage For="@(() => formModel.QuantityInStock)" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Minimum quantity</label>
                            <InputNumber class="form-control" @bind-Value="formModel.MinQuantity" />
                            <ValidationMessage For="@(() => formModel.MinQuantity)" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Expiry date</label>
                            <InputDate class="form-control" @bind-Value="formModel.ExpiryDate" />
                        </div>
                        <div class="col-12 form-check">
                            <InputCheckbox class="form-check-input" id="perishableCheck" @bind-Value="formModel.IsPerishable" />
                            <label class="form-check-label" for="perishableCheck">Perishable item</label>
                        </div>
                        <div class="col-12 d-flex gap-2">
                            <button class="btn btn-primary" type="submit" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                                }
                                @(isEditing ? "Save changes" : "Add product")
                            </button>
                            @if (isEditing)
                            {
                                <button class="btn btn-outline-secondary" type="button" @onclick="ResetForm" disabled="@isSaving">Cancel</button>
                            }
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="col-lg-7">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">Current products</h5>
                    <div class="text-muted small">@($"{products.Count} item(s)")</div>
                </div>
                @if (isLoading)
                {
                    <div class="d-flex align-items-center">
                        <div class="spinner-border text-primary me-2" role="status"></div>
                        <span>Loading products...</span>
                    </div>
                }
                else if (!products.Any())
                {
                    <div class="alert alert-info mb-0">No products found. Add your first product using the form.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Barcode</th>
                                    <th>Name</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-end">Stock</th>
                                    <th class="text-center">Perishable</th>
                                    <th class="text-end"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in products)
                                {
                                    <tr>
                                        <td>@product.Barcode</td>
                                        <td>
                                            <div class="fw-semibold">@product.Name</div>
                                            <small class="text-muted">
                                                @if (!string.IsNullOrWhiteSpace(product.Category))
                                                {
                                                    <span>@product.Category Â· </span>
                                                }
                                                @if (product.ExpiryDate is not null)
                                                {
                                                    <span>Expires @product.ExpiryDate?.ToString("yyyy-MM-dd")</span>
                                                }
                                                else
                                                {
                                                    <span>No expiry</span>
                                                }
                                            </small>
                                        </td>
                                        <td class="text-end">@product.UnitPrice.ToString("C")</td>
                                        <td class="text-end">
                                            <div>@product.QuantityInStock</div>
                                            <small class="text-muted">Min @product.MinQuantity</small>
                                        </td>
                                        <td class="text-center">
                                            @if (product.IsPerishable)
                                            {
                                                <span class="badge bg-warning text-dark">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">No</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-primary" @onclick="@(() => StartEdit(product))">Edit</button>
                                                <button class="btn btn-outline-danger" @onclick="@(() => DeleteProduct(product))" disabled="@isSaving">Delete</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<MegaMarket.BlazorUI.Services.ProductDto> products = new();
    private ProductFormModel formModel = new();
    private bool isLoading;
    private bool isSaving;
    private bool isEditing;
    private int editingId;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadProductsAsync();
    }

    private async Task LoadProductsAsync()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var items = await ProductApiClient.GetProductsAsync();
            products = items.OrderBy(p => p.Name).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load products: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var dto = MapFormToDto();
            bool success;
            string? apiError = null;

            if (isEditing)
            {
                var result = await ProductApiClient.UpdateAsync(editingId, dto);
                success = result.Success;
                apiError = result.Error;
                successMessage = success ? "Product updated." : null;
            }
            else
            {
                var result = await ProductApiClient.CreateAsync(dto);
                success = result.Success && result.Data is not null;
                apiError = result.Error;
                successMessage = success ? "Product added." : null;
            }

            if (!success)
            {
                errorMessage = string.IsNullOrWhiteSpace(apiError)
                    ? "Operation failed. Please try again."
                    : $"Operation failed: {apiError}";
                return;
            }

            await LoadProductsAsync();
            ResetForm();
        }
        catch (Exception ex)
        {
            errorMessage = $"Something went wrong: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void StartEdit(MegaMarket.BlazorUI.Services.ProductDto product)
    {
        isEditing = true;
        editingId = product.ProductId;
        successMessage = null;
        errorMessage = null;

        formModel = new ProductFormModel
        {
            Barcode = product.Barcode,
            Name = product.Name,
            Category = product.Category,
            UnitPrice = product.UnitPrice,
            QuantityInStock = product.QuantityInStock,
            MinQuantity = product.MinQuantity,
            ExpiryDate = product.ExpiryDate,
            IsPerishable = product.IsPerishable
        };
    }

    private async Task DeleteProduct(MegaMarket.BlazorUI.Services.ProductDto product)
    {
        isSaving = true;
        errorMessage = null;
        successMessage = null;
        try
        {
            var result = await ProductApiClient.DeleteAsync(product.ProductId);
            if (!result.Success)
            {
                errorMessage = string.IsNullOrWhiteSpace(result.Error)
                    ? "Failed to delete product."
                    : $"Failed to delete product: {result.Error}";
                return;
            }

            await LoadProductsAsync();
            if (isEditing && editingId == product.ProductId)
            {
                ResetForm();
            }
            successMessage = "Product deleted.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Could not delete product: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void ResetForm()
    {
        formModel = new ProductFormModel();
        isEditing = false;
        editingId = 0;
        successMessage = null;
        errorMessage = null;
    }

    private MegaMarket.BlazorUI.Services.ProductCreateUpdateDto MapFormToDto() =>
        new()
        {
            Barcode = formModel.Barcode,
            Name = formModel.Name,
            Category = formModel.Category,
            UnitPrice = formModel.UnitPrice,
            QuantityInStock = formModel.QuantityInStock,
            MinQuantity = formModel.MinQuantity,
            ExpiryDate = formModel.ExpiryDate,
            IsPerishable = formModel.IsPerishable
        };

    private class ProductFormModel
    {
        [Required, StringLength(100)]
        public string Barcode { get; set; } = string.Empty;

        [Required, StringLength(200)]
        public string Name { get; set; } = string.Empty;

        [StringLength(100)]
        public string? Category { get; set; }

        [Range(0, 999999)]
        public decimal UnitPrice { get; set; }

        [Range(0, int.MaxValue)]
        public int QuantityInStock { get; set; }

        [Range(0, int.MaxValue)]
        public int MinQuantity { get; set; }

        public DateTime? ExpiryDate { get; set; }

        public bool IsPerishable { get; set; }
    }
}
